. /etc/rc.subr

name="cassandra"
rcvar=`set_rcvar`
load_rc_config $name

cassandra_user=${cassandra_user:-"cassandra"}
cassandra_group=${cassandra_group:-"cassandra"}
cassandra_enable=${cassandra_enable:-"NO"}
cassandra_vmargs=${cassandra_vmargs:-""}
cassandra_memory=${cassandra_memory:-"1000m"}
cassandra_newgen=${cassandra_newgen:-"300m"}

command=/usr/local/share/cassandra/bin/cassandra
command_args="-p /tmp/cassandra.pid >/dev/null"
stop_precmd="${name}_prestop"

procname="/usr/local/openjdk6/bin/java"
pidfile=/tmp/cassandra.pid

export MAX_HEAP_SIZE="$cassandra_memory"
export HEAP_NEWSIZE="$cassandra_newgen"
export PATH=$PATH:/usr/local/bin
export CASSANDRA_HOME=/usr/local/share/cassandra
export JVM_OPTS=-javaagent:/usr/local/share/cassandra/lib/jamm-0.2.5.jar
export JVM_OVERRIDE_OPTS="$cassandra_vmargs"

export JAVA_VENDOR=openjdk
export JAVA_VERSION=1.6

cassandra_prestop() {
	$CASSANDRA_HOME/bin/nodetool -h localhost disablegossip
	sleep 8
	$CASSANDRA_HOME/bin/nodetool -h localhost disablethrift
	$CASSANDRA_HOME/bin/nodetool -h localhost drain 
}

start_postcmd=wait_for_startup

wait_for_startup()
{
	try=0
	maxtries=5
	sleeptime=1
	port=9160

	while [ $try -lt $maxtries ]; do
		try=`expr $try + 1`
		nc -z 127.0.0.1 $port
		if [ $? -eq 0 ]; then
			echo "cassandra is up!"
			break
		elif [ $try -lt $maxtries ]; then
			echo "cassandra is not up yet. Sleeping $sleeptime"
			sleep $sleeptime
		else
			echo "cassandra is not up after $try checks. ERROR!!"
			exit 1
		fi
	done
}

run_rc_command "$1"
