# PeerNode Server openvpn.conf In-band tunnel (layer 2)

port <%= @openvpn_inband_port %>
proto udp

dev <%= @inband_interface %>

ifconfig <%= @peernode_inband_ip %> 255.255.255.0

secret static.key

user nobody
group nobody

persist-tun
persist-key

daemon
comp-lzo

ping 10
ping-restart 120

management 127.0.0.1 <%= @inband_mgmt_port %>
