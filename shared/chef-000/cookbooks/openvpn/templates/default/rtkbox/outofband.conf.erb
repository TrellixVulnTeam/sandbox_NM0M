#Out-of-band tunnel configuration

remote <%= @peernode_public_ip %>
port <%= @openvpn_outofband_port %>
proto udp

dev <%= @outofband_interface %>

ifconfig <%= @rtkbox_outofband_ip %> <%= @peernode_outofband_ip %>

secret static.key

user nobody
group nobody

persist-tun
persist-key

daemon
comp-lzo

ping 10
ping-restart 60

management 127.0.0.1 <%= @outofband_mgmt_port %>
